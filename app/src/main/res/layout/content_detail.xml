<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.appbusters.robinkamboj.popularmoviesapp.view.activities.DetailActivity"
    tools:showIn="@layout/activity_detail">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5sp"
            app:cardElevation="4sp"
            app:cardCornerRadius="5sp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="185sp"
                    android:layout_height="270sp"
                    android:layout_alignParentLeft="true"
                    android:id="@+id/poster"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/poster"
                    android:padding="4sp"
                    android:text="Title"
                    android:fontFamily="sans-serif-smallcaps"
                    android:textColor="@color/colorBlackShade"
                    android:textSize="22sp"
                    android:gravity="start"
                    android:layout_marginTop="14sp"
                    android:id="@+id/title"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10sp"
                    android:text="8.0"
                    android:fontFamily="sans-serif-smallcaps"
                    android:textColor="@color/colorPrimary"
                    android:textSize="28sp"
                    android:gravity="start"
                    android:id="@+id/rating"
                    android:layout_marginLeft="4sp"
                    android:layout_marginRight="4sp"
                    android:layout_toRightOf="@+id/poster"
                    android:layout_centerVertical="true" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_toRightOf="@+id/poster"
                    android:padding="4sp"
                    android:text="Release Date:"
                    android:fontFamily="sans-serif-smallcaps"
                    android:textSize="18sp"
                    android:gravity="start"
                    android:layout_margin="4sp"
                    android:id="@+id/release_date"/>

            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="4sp"
            android:layout_margin="5sp"
            app:cardCornerRadius="5sp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="3sp"
                    android:text="Overview:"
                    android:textSize="18sp"
                    android:id="@+id/one"
                    android:fontFamily="sans-serif-smallcaps"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5sp"
                    android:text="Overview Of The Movie Goes Here"
                    android:textSize="12sp"
                    android:textColor="@color/colorBlackShade"
                    android:layout_below="@+id/one"
                    android:fontFamily="casual"
                    android:id="@+id/overview"/>

            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="4sp"
            android:layout_margin="5sp"
            app:cardCornerRadius="5sp"
            android:id="@+id/videos_card"
            android:visibility="invisible">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="3sp"
                    android:text="Videos:"
                    android:textSize="18sp"
                    android:id="@+id/two"
                    android:fontFamily="sans-serif-smallcaps"/>

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/two">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <SurfaceView
                            android:layout_width="200sp"
                            android:layout_height="100sp"
                            android:layout_margin="4sp"/>

                        <SurfaceView
                            android:layout_width="200sp"
                            android:layout_height="100sp"
                            android:layout_margin="4sp"/>

                        <SurfaceView
                            android:layout_width="200sp"
                            android:layout_height="100sp"
                            android:layout_margin="4sp"/>

                        <SurfaceView
                            android:layout_width="200sp"
                            android:layout_height="100sp"
                            android:layout_margin="4sp"/>

                    </LinearLayout>

                </HorizontalScrollView>

            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="4sp"
            android:layout_margin="5sp"
            app:cardCornerRadius="5sp"
            android:id="@+id/reviews_card"
            android:visibility="invisible">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="3sp"
                    android:text="Reviews:"
                    android:textSize="18sp"
                    android:id="@+id/three"
                    android:fontFamily="sans-serif-smallcaps"/>

                <android.support.v7.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/reviews">

                </android.support.v7.widget.RecyclerView>

            </RelativeLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>
